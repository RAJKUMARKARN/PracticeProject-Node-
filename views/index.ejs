<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-zinc-900">
    <div class="main w-full min-h-screen flex justify-center items-start pt-10">
      <div class="form w-full max-w-2xl px-5">
        <!-- Form -->
        <form action="/create" method="post" class="space-y-3">
          <!-- Title input -->
          <input 
            type="text" 
            class="block w-full px-5 rounded-md outline-none py-4 bg-zinc-800 text-white" 
            placeholder="The title goes here"
            name="title">

          <!-- Description textarea -->
          <textarea 
            class="block w-full px-5 rounded-md py-3 outline-none bg-zinc-800 resize-none text-white"
            placeholder="Write the description" 
            name="details"></textarea>

          <!-- Submit button -->
          <input 
            class="bg-blue-600 w-full px-5 py-3 rounded text-white cursor-pointer" 
            type="submit" 
            value="Create Task">
        </form>

        <!-- Tasks Section1 -->
        <div class="tasks mt-10 flex flex-wrap gap-3">
          <% if (files.length > 0) { %>
            <% files.forEach(function(val) { %>
              <div class="task w-72 px-3 py-4 bg-zinc-800 rounded text-white">
                <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                <div class="flex w-full justify-between mt-3 ">
                         <a class="text-blue-500 inline-block " href="/files/<%= val%>">Read More</a>
                           <a  class="text-zinc-600" href="/edit/<%= val%>"> edit filename</a>
       
                </div>
               
              </div>
            <% }) %>
          <% } else { %>
            <h3 class="text-zinc-600">No tasks yet</h3> 
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
