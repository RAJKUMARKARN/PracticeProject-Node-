<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="">
    <div class="main w-full min-h-screen bg-zinc-900 p-10 text-white">

        <a  class=" text-blue-500 inline-block mb-10" href="/">Go back to homw</a>
        <form action="/edit" method="post" class="space-y-3">
          <!-- Title input -->
          <input 
            type="text" 
            class="block w-1/4 px-5 rounded-md outline-none py-4 bg-zinc-800 text-white" 
            placeholder="Previous"
            name="Previous"
            value="<%= filename%>"
            readonly
            >
 
             <input 
            type="text" 
            class="block w-1/4 px-5 rounded-md outline-none py-4 bg-zinc-800 text-white mt-2" 
            placeholder="New"
            name="New"
            >
         

          <!-- Submit button -->
          <input 
            class="bg-yellow-600 w-[150px] px-5 py-3 rounded text-white cursor-pointer" 
            type="submit" 
            value="Update Name">
        </form>


    </div>
  </body>
</html>
